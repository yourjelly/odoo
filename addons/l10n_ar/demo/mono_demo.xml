<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="partner_mono" model="res.partner">
        <field name='name'>(AR) Monotributista</field>
        <field name='l10n_ar_afip_responsability_type_id' ref="res_RM"/>
        <field name='l10n_latam_identification_type_id' ref="l10n_ar_base.it_cuit"/>
        <field name='vat'>20222222223</field>
        <field name="street">Calle Falsa 123</field>
        <field name="city">Rosario</field>
        <field name="country_id" ref="base.ar"/>
        <field name="state_id" ref="base.state_ar_s"/>
        <field name="zip">2000</field>
        <field name="phone">+1 555 123 8069</field>
        <field name="email">info@yourcompany.example.com</field>
        <field name="website">www.example.com</field>
        <field name="supplier" eval="True"/>
    </record>

    <record id="company_mono" model="res.company">
        <field name='parent_id' ref='base.main_company'/>
        <field name='currency_id' ref='base.ARS'/>
        <field name='partner_id' ref='partner_mono'/>
        <field name='name'>(AR) Monotributista</field>
        <field name='l10n_ar_gross_income_type'>no_liquida</field>
        <field name="l10n_ar_afip_start_date" eval="time.strftime('%Y-%m')+'-1'"/>
    </record>

    <function model="res.users" name="write">
        <value eval="[1, 2]"/>
        <value eval="{'company_id': ref('l10n_ar.company_mono'), 'company_ids': [(4, ref('l10n_ar.company_mono'))]}"/>
    </function>

    <function model="res.config.settings" name="create">
        <value model="res.config.settings" eval="dict(
            obj().default_get(list(obj().fields_get())),
            **{
                'chart_template_id': obj().env.ref('l10n_ar.l10nar_base_chart_template').id,
                'company_id': obj().env.ref('l10n_ar.company_mono').id,
            }
        )"/>
    </function>

    <function model="res.config.settings" name="execute">
        <value model="res.config.settings" eval="obj().search([('chart_template_id', '=', obj().env.ref('l10n_ar.l10nar_base_chart_template').id)], order='create_date desc', limit=1).id"/>
    </function>

    <function model="res.config.settings" name="unlink">
        <value model="res.config.settings" eval="obj().search([('chart_template_id', '=', obj().env.ref('l10n_ar.l10nar_base_chart_template').id)], order='create_date desc', limit=1).id"/>
    </function>
</odoo>

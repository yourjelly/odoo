<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="account.mail_attachments">
        <t t-set="data" t-value="getValue()"/>

        <ul class="list-unstyled m-0">
            <t t-foreach="data" t-as="file" t-key="file.id">
                <t t-if="!file.skip">
                    <li class="d-flex align-items-center bg-200 p-1 ps-3 my-2">
                        <span t-out="file.name" class="flex-grow-1 text-truncate"/>

                        <button class="btn flex-shrink-0" t-on-click.stop="() => this.onFileRemove(file.id)">
                            <i class="fa fa-fw fa-times"/>
                        </button>
                    </li>
                </t>
            </t>
        </ul>
    </t>
</templates>

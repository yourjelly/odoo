<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_order_filter" model="ir.ui.view">
        <field name="name">sale.order.list.select</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <filter name="my_sale_orders_filter" position="after">
                <filter string="Exceeded Declaration of Intent" name="l10n_it_declaration_of_intent_exceeded"
                        domain="[('l10n_it_declaration_of_intent_id.remaining_amount','&lt;', 0)]"/>
            </filter>
            <xpath expr="//search/group" position="inside">
                <filter string="Declaration of Intent" name="l10n_it_declaration_of_intent"
                        domain="" context="{'group_by':'l10n_it_declaration_of_intent_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
           <div name="button_box" position="inside">
               <button groups="account.group_account_invoice"
                       type="object"
                       class="oe_stat_button"
                       name="action_open_declaration_of_intent"
                       icon="fa-list"
                       invisible="not l10n_it_declaration_of_intent_id">
                   <div class="o_field_widget o_stat_info">
                       <span class="o_stat_text">Declaration of Intent</span>
                   </div>
               </button>
           </div>
           <xpath expr="//header" position="after">
               <div class="alert alert-warning mb-0" role="alert"
                    invisible="not l10n_it_intent_threshold_warning">
                   <field name="l10n_it_intent_threshold_warning"/>
               </div>
            </xpath>
            <xpath expr="//label[@for='fiscal_position_id']" position="before">
                <field name="l10n_it_use_declaration_of_intent" invisible="True"/>
                <field name="l10n_it_declaration_of_intent_date" invisible="True"/>
                <field name="l10n_it_declaration_of_intent_id"
                       invisible="not l10n_it_use_declaration_of_intent"
                       readonly="state != 'draft'"
                       domain="[
                                ('state', '=', 'active'),
                                ('company_id', '=', company_id),
                                ('currency_id', '=', currency_id),
                                ('partner_id', 'parent_of', partner_id),
                                ('start_date', '&lt;=', l10n_it_declaration_of_intent_date),
                                ('end_date', '&gt;=', l10n_it_declaration_of_intent_date),
                               ]"/>
            </xpath>
        </field>
    </record>

</odoo>

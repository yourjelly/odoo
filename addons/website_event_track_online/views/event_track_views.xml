<?xml version="1.0"?>
<odoo>
        <!-- Event Tracks -->
        <record model="ir.actions.act_window" id="action_wishlist_partners_from_track">
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'create': False, 'edit': False}</field>
        </record>

        <record model="ir.ui.view" id="event_track_view_search">
            <field name="name">event.track.view.search.inherit.event.track.online</field>
            <field name="model">event.track</field>
            <field name="inherit_id" ref="website_event_track.view_event_track_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='message_needaction']" position="after">
                    <filter string="Wishlisted By Default" name="wishlisted_by_default" domain="[('wishlisted_by_default', '=', True)]"/>
                </xpath>
            </field>
        </record>

        <record id="event_track_view_tree" model="ir.ui.view" >
            <field name="name">event.track.view.tree.inherit.event.track.online</field>
            <field name="model">event.track</field>
            <field name="inherit_id" ref="website_event_track.view_event_track_tree"/>
            <field name="arch" type="xml">
                <field name="event_id" position='after'>
                    <field name="wishlisted_by_default"/>
                    <field name="wishlist_partner_ids"/>
                </field>
            </field>
        </record>

        <record id="event_track_view_form" model="ir.ui.view" >
            <field name="name">event.track.view.form.inherit.event.track.online</field>
            <field name="model">event.track</field>
            <field name="inherit_id" ref="website_event_track.view_event_track_form"/>
            <field name="arch" type="xml">
                <field name="active" position='after'>
                    <field name="wishlisted_by_default"/>
                </field>
                <div name="button_box" position="inside">
                    <button name="action_view_wishlist_partners"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-star">
                        <field name="wishlist_partner_count" string="Wishlisted By" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>

</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.CreatePollDialogAnswer">
        <div class="d-flex gap-2 mb-3">
            <div class="input-group">
                <button class="btn btn-outline-secondary" type="button" t-ref="picker"><i class="fa fa-lg fa-smile-o"/></button>
                <input type="text" t-model="props.model.text" class="form-control" placeholder="Type your answer" t-ref="root"/>
            </div>
            <button t-if="props.allowRemoval" class="btn btn-primary" t-on-click="props.onClickRemove"><i class="fa fa-trash"/></button>
        </div>
    </t>
</templates>

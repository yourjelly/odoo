<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.LinkPreviewList">
        <div class="o-mail-LinkPreviewList d-flex flex-column mt-2" t-att-class="{ 'me-2 pe-4': env.inChatWindow and !env.alignedRight, 'ms-2 ps-4': env.inChatWindow and env.alignedRight }">
            <div class="d-flex flex-grow-1 flex-wrap">
                <t t-if="props.linkPreviewsMessages.length > 1">
                    <t t-foreach="props.linkPreviewsMessages" t-as="linkPreviewMessage" t-key="linkPreviewMessage.id">
                        <LinkPreview linkPreview="linkPreviewMessage.link_preview_id" delete.bind="linkPreviewMessage.hide" deleteAll.bind="linkPreviewMessage.message_id.hideAllLinkPreviews"/>
                    </t>
                </t>
                <t t-else="">
                   <LinkPreview linkPreview="props.linkPreviewsMessages[0].link_preview_id" delete.bind="props.linkPreviewsMessages[0].hide"/>
                </t>
            </div>
        </div>
    </t>
</templates>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_inherit_view_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.view.form.inherit.view_company_form_inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Operating Units" groups="l10n_in_multi_units.group_multi_operating_unit">
                    <field name="unit_ids" mode="kanban" domain="[('company_unit_id', '=', active_id)]" context="{'default_country_id': country_id,'default_is_company': 1}"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

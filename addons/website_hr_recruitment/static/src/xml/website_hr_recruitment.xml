<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="website_hr_recruitment.default_job_form">
        <div class="form-group col-12 form-field  o_website_form_required_custom">
            <div class="row s_col_no_bgcolor s_col_no_resize">
                <label style="width: 200px" class="col-auto col-form-label o_we_form_label" for="partner_name">Your Name</label>
                <div class="col">
                    <input type="text" class="form-control o_website_form_input" name="partner_name" required=""/>
                </div>
            </div>
        </div>
        <div class="form-group col-12 form-field  o_website_form_required_custom">
            <div class="row s_col_no_bgcolor s_col_no_resize">
                <label style="width: 200px" class="col-auto col-form-label o_we_form_label" for="email_from">Your Email</label>
                <div class="col">
                    <input type="text" class="form-control o_website_form_input" name="email_from" required="" />
                </div>
            </div>
        </div>
        <div class="form-group col-12 form-field  o_website_form_required_custom">
            <div class="row s_col_no_bgcolor s_col_no_resize">
                <label style="width: 200px" class="col-auto col-form-label o_we_form_label" for="partner_phone">Phone Number</label>
                <div class="col">
                    <input type="text" class="form-control o_website_form_input" name="partner_phone" required="" />
                </div>
            </div>
        </div>
        <div class="form-group col-12 form-field ">
            <div class="row s_col_no_bgcolor s_col_no_resize">
                <label style="width: 200px" class="col-auto col-form-label o_we_form_label" for="description">Short Introduction</label>
                <div class="col">
                    <textarea class="form-control o_website_form_input" name="description"></textarea>
                </div>
            </div>
        </div>
        <div class="form-group col-12 form-field  o_website_form_custom" data-type="binary">
            <div class="row s_col_no_bgcolor s_col_no_resize">
                <label style="width: 200px" class="col-auto col-form-label o_we_form_label" for="Resume">Resume</label>
                <div class="col">
                    <input type="file" class="form-control o_website_form_input" name="Resume" />
                </div>
            </div>
        </div>
    </t>

</templates>

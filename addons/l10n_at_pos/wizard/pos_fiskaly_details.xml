<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_fiskaly_details_wizard" model="ir.ui.view">
        <field name="name">pos.fiskaly.details.wizard.form</field>
        <field name="model">pos.fiskaly.details.wizard</field>
        <field name="arch" type="xml">
            <form string="Fiskaly DEP7 Report">
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <group>
                    <field name="pos_session_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_dep_audit_report" string="Print" type="object" class="btn-primary" data-hotkey="q" disabled="not pos_session_ids"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x" />
                </footer>
            </form>
        </field>
    </record>
</odoo>

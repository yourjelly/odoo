<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_view_form_inherit_rs" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.rs</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="required">'RS' in fiscal_country_codes</attribute>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="l10n_rs_edi_registration_number" invisible="'RS' not in fiscal_country_codes" required="'RS' in fiscal_country_codes"/>
                <field name="l10n_rs_edi_public_funds_id" invisible="'RS' not in fiscal_country_codes"/>
            </xpath>
        </field>
    </record>
</odoo>

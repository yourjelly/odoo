<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.Many2ManyTagsField" owl="1">
        <TagsList tags="tags">
            <div t-if="showM2OSelectionField" class="o_field_many2many_selection">
                <Many2XAutocomplete
                    id="props.id"
                    placeholder="props.placeholder"
                    resModel="props.relation"
                    autoSelect="true"
                    fieldString="fieldString"
                    activeActions="activeActions"
                    update="update"
                    quickCreate="quickCreate"
                    context="context"
                    getDomain.bind="getDomain"
                    isToMany="true"
                    nameCreateField="props.nameCreateField"
                />
            </div>
        </TagsList>
    </t>

    <t t-name="web.Many2ManyTagsFieldColorListPopover" owl="1">
        <div class="o_tag_popover m-2">
            <ColorList colors="props.colors" onColorSelected="(id) => props.switchTagColor(id, props.tag)"/>
            <CheckBox className="'pt-2'" value="props.tag.colorIndex === 0" onChange.bind="(isChecked) => props.onTagVisibilityChange(isChecked, props.tag)">Hide in kanban</CheckBox>
        </div>
    </t>

</templates>

    <t t-name="web.ControlPanel" owl="1">
        <div class="o_control_panel" t-ref="root">
            <div class="o_control_panel_main grid px-2">
                <div class="g-col-12 g-col-md-4 gap-2 d-flex align-items-center">
                    <div class="o_control_panel_create_button">
                        <t t-slot="control-panel-create-button"/>
                    </div>
                    <t t-if="!env.config.noBreadcrumbs" t-call="web.Breadcrumbs"/>
                </div>

                <div class="g-col-12 g-col-md-4 d-flex align-items-center">
                    <t t-slot="layout-actions"/>
                </div>

                <div class="g-col-12 g-col-md-4 d-flex justify-content-end align-items-center">
                    <div t-if="pagerProps and pagerProps.total > 0" class="o_cp_pager" role="search">
                        <Pager t-props="pagerProps"/>
                    </div>
                    <nav t-if="env.config.viewSwitcherEntries?.length > 1" class="btn-group o_cp_switch_buttons">
                        <t t-foreach="env.config.viewSwitcherEntries" t-as="view" t-key="view.type">
                            <button class="btn btn-light o_switch_view "
                                t-attf-class="o_{{view.type}} {{view.icon}} {{view.active ? 'active' : ''}}"
                                t-att-data-tooltip="view.name"
                                t-on-click="() => this.onViewClicked(view.type)"
                                />
                        </t>
                    </nav>
                </div>
            </div>
            <div class="d-flex px-2">
                <t t-slot="layout-buttons"/>
            </div>
        </div>
    </t>


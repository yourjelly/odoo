    <!--                     DIGEST TOOLS                    -->

    <!-- KPI DISPLAY -->
    <template id="digest_tool_kpi">
<span t-esc="kpi_value" t-att-class="'kpi_value %s' % kpi_color " style="color: #00A09D;font-weight: bold;text-decoration: none;" />
<br/>
<span t-esc="kpi_subtitle" class="kpi_value_label" style="display: inline-block;margin-bottom: 10px;color: #888888;font-size: 12px;text-transform: uppercase;" />
<div t-if="kpi_margin" class="kpi_margin_margin">
    <span   t-if="kpi_margin &gt; 0.0" class="kpi_margin positive_kpi_margin" style="width: 75px;padding: 5px 10px;text-decoration: none;border-radius: 5px;border: 1px solid #c4ecd7;background-color: #d5f1e2;color: #17613a;">▲ <t t-esc="'%.2f' % kpi_margin"/> %</span>
    <span t-elif="kpi_margin &lt; 0.0" class="kpi_margin negative_kpi_margin" style="width: 75px;padding: 5px 10px;text-decoration: none;border-radius: 5px; border: 1px solid #f4cfce;background-color: #f7dddc;color: #712b29;">▼ <t t-esc="'%.2f' % kpi_margin"/> %</span>
</div>
    </template>

</data>
</odoo>

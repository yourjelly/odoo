<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <we3-group t-name="wysiwyg.buttons.help">
        <we3-button name="help-show" title="Help" data-method="showHelpDialog">
            <i class="fa fa-question"></i>
        </we3-button>
    </we3-group>
    <div t-name="wysiwyg.help_dialog">
        <t t-foreach="keyMap" t-as="item" t-if="item.description">
            <div class="help-list-item">
                <label class="help-shortcut">
                    <kbd><t t-esc="item.shortcut"/></kbd>
                </label>
                <span class="help-description">
                    <t t-esc="item.description"/>
                </span>
            </div>
        </t>
    </div>
</templates>

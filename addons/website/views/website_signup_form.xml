<odoo>
    <template id="website.website_signup_form">
        <div id="wrap" class="oe_structure oe_empty" contenteditable="false">
            <section class="signup_form o_draggable o_editable" data-name="Form">
                <div class="container">
                    <form class="oe_signup_form o_mark_required" action="/website/form/" method="post" enctype="multipart/form-data" data-mark="*" data-pre-fill="true">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <div data-name="Field" class="signup_form_field mb-3 col-12 signup_form_required_field field-login" data-type="char">
                            <label class="signup_form_label" style="width: 200px" for="login">
                                <span class="signup_form_label_content">Your Email</span>
                                <span class="signup_form_mark"> *</span>
                            </label>
                            <input class="form-control signup_form_input" type="text" name="login" data-fill-with="login" t-att-value="login" autofocus="autofocus" id="login" autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                        </div>

                        <div data-name="Field" class="signup_form_field mb-3 col-12 signup_form_required_field field-login" data-type="char">
                            <label class="signup_form_label" style="width: 200px" for="name">
                                <span class="signup_form_label_content">Your Name</span>
                                <span class="signup_form_mark"> *</span>
                            </label>
                            <input class="form-control signup_form_input" type="text" name="name" data-fill-with="name" t-att-value="name" autofocus="autofocus" id="name" autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                        </div>

                        <div data-name="Field" class="signup_form_field mb-3 col-12 signup_form_required_field field-login" data-type="char">
                            <label class="signup_form_label" style="width: 200px" for="password">
                                <span class="signup_form_label_content">Password</span>
                                <span class="signup_form_mark"> *</span>
                            </label>
                            <input class="form-control signup_form_input" type="password" name="Password" data-fill-with="password" t-att-value="password" autofocus="autofocus" id="password" autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                        </div>

                        <div data-name="Field" class="signup_form_field mb-3 col-12 signup_form_required_field field-login" data-type="char">
                            <label class="signup_form_label" style="width: 200px" for="confirm_password">
                                <span class="signup_form_label_content">Confirm Password</span>
                                <span class="signup_form_mark"> *</span>
                            </label>
                            <input class="form-control signup_form_input" type="password" name="confirm_password" data-fill-with="confirm_password" t-att-value="confirm_password" autofocus="autofocus" id="confirm_password" autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                        </div>

                        <p class="alert alert-danger" t-if="error" role="alert">
                            <t t-esc="error"/>
                        </p>
                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                        <input type="hidden" name="token" t-att-value="token"/>    
                        <div class="text-center oe_login_buttons d-grid pt-3">
                            <button type="submit" class="btn btn-primary"> Sign up</button>
                            <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link btn-sm" role="button">Already have an account?</a>
                            <div class="o_login_auth"/>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </template>

    <template id="website_signup" inherit_id="auth_signup.signup">
        <xpath expr="//section" position="replace">
            <t t-call="website.website_signup_form"/>
        </xpath>
    </template>

    <template id="website_signup_form_options" inherit_id="website.snippet_options">
        <xpath expr="//t[@t-set='so_content_addition_selector']" position="inside">, .singup_form</xpath>
        <xpath expr="//div" position="after">

            <!-- Add Field -->
            <div data-js="AddSignupField" data-selector=".signup_form">
                <we-button class="o_we_bg_brand_primary"
                title="Add a new field at the end"
                data-add-field=""
                data-no-preview="true">
                + Field
                </we-button>
            </div>
            <!-- Warning -->
            <div data-js="WebsiteSignupFormFieldRequired" data-selector=".signup_form_required_field">
                <we-alert class="mt-2"></we-alert>
            </div>
            <!-- Field -->
            <div data-js='WebsiteSignupFieldEditor' data-selector=".signup_form_field" 
                data-drop-near=".signup_form_field" data-drop-lock-within="form" >
                <we-select string="Marked Fields" data-name="field_mark_select">
                    <we-button data-select-class="">None</we-button>
                    <we-button data-select-class="o_mark_required" data-name="form_required_opt">Required</we-button>
                    <we-button data-select-class="o_mark_optional" data-name="form_optional_opt">Optional</we-button>
                </we-select>
                <we-input string="Mark Text" data-set-mark="" data-dependencies="form_required_opt, form_optional_opt"/>
                <we-select data-name="type_opt" string="Type" data-no-preview="true">
                    <we-button data-custom-field="number">VAT</we-button>
                    <we-button data-custom-field="tel">Phone Number</we-button>
                    <we-button data-custom-field="char">Company Name</we-button>
                </we-select>
                <we-input string="Label" class="o_we_large" data-set-label-text=""/>
                <we-checkbox string="Description" data-toggle-description="true" data-no-preview="true"/>
                <we-input string="Placeholder" class="o_we_large"
                data-select-attribute="" data-attribute-name="placeholder"
                data-apply-to="input[type='text'], input[type='email'], input[type='number'], input[type='tel'], input[type='url'], textarea"/>
                <we-checkbox string="Required" data-name="required_opt" data-no-preview="true"
                data-toggle-required="s_website_form_required"/>
            </div>
        </xpath>
    </template>

</odoo>

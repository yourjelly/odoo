<odoo>
    <template id="website.website_signup_form">
        <div id="wrap" class="oe_structure oe_empty" contenteditable="false">
            <section class="singup_form o_editable">
                <div class="container">
                    <form class="oe_signup_form o_mark_required" action="/website/form/" method="post" enctype="multipart/form-data" data-mark="*" data-pre-fill="true">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <div class="mb-3 signup_form_field field-login">
                                <label class="signup_form_label" for="login">
                                    <span class="signup_form_label_content">Your Email</span>
                                </label>
                                <input type="text" name="login" t-att-value="login" id="login" class="form-control form-control-sm signup_form_input signup_form_required_field" autofocus="autofocus"
                                    autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None" data-fill-with="login"/>
                            </div>
                            <div class="mb-3 signup_form_field field-name">
                                <label class="signup_form_label" for="name">
                                    <span class="signup_form_label_content">Your Name</span>
                                </label>
                                <input type="text" name="name" t-att-value="name" id="name" class="form-control form-control-sm signup_form_input signup_form_required_field" autofocus="autofocus"
                                    autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None" data-fill-with="name"/>
                            </div>
                            <div class="mb-3 signup_form_field field-Password">
                                <label class="signup_form_label" for="Password">
                                    <span class="signup_form_label_content">Password</span>
                                </label>
                                <input type="password" name="Password" id="Password" class="form-control form-control-sm signup_form_input signup_form_required_field" autofocus="autofocus"
                                    autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None" data-fill-with="password"/>
                            </div>
                            <div class="mb-3 signup_form_field field-confirm_password">
                                <label class="signup_form_label" for="confirm_password">
                                    <span class="signup_form_label_content">Confirm Password</span>
                                </label>
                                <input type="password" name="confirm_password" id="confirm_password" class="form-control form-control-sm signup_form_input signup_form_required_field" autofocus="autofocus" required="required" t-att-readonly="'readonly' if only_passwords else None" data-fill-with="confirm_password"/>
                            </div>
                            <div class="mb-3 signup_form_field field-vat_number">
                                <label class="signup_form_label" for="vat_number">
                                    <span class="signup_form_label_content">VAT number</span>
                                </label>
                                <input type="number" name="vat_number" id="vat_number" class="form-control form-control-sm signup_form_input" t-att-readonly="'readonly' if only_passwords else None" data-fill-with="confirm_password"/>
                            </div>

                            <p class="alert alert-danger" t-if="error" role="alert">
                                <t t-esc="error"/>
                            </p>
                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                            <input type="hidden" name="token" t-att-value="token"/>    
                            <div class="text-center oe_login_buttons d-grid pt-3">
                                <button type="submit" class="btn btn-primary"> Sign up</button>
                                <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link btn-sm" role="button">Already have an account?</a>
                                <div class="o_login_auth"/>
                            </div>
                    </form>
                </div>
            </section>
        </div>
    </template>

    <template id="website_signup" inherit_id="auth_signup.signup">
        <xpath expr="//section" position="replace">
            <t t-call="website.website_signup_form"/>
        </xpath>
    </template>

    <template id="website_signup_form_options" inherit_id="website.snippet_options">
        <xpath expr="//t[@t-set='so_content_addition_selector']" position="inside">, .singup_form</xpath>
        <xpath expr="//div" position="after">
            <!-- Field -->
            <div data-js="WebsiteSignupFormFieldRequired" data-selector=".singup_form .signup_form_required_field">
                <!-- Disable the delete option of model required fields and show
                alert and tooltip on delete buttons -->
                <we-alert class="mt-2"></we-alert>
            </div>
            
            <!-- Form -->
            <div data-js="WebsiteSignupFormEditor" data-selector=".signup_form_input" data-drop-near=".signup_form_input" data-drop-lock-within="form" >
                <we-select string="Marked Fields" data-name="field_mark_select">
                    <we-button data-select-class="">None</we-button>
                    <we-button data-select-class="o_mark_required" data-name="form_required_opt">Required</we-button>
                    <we-button data-select-class="o_mark_optional" data-name="form_optional_opt">Optional</we-button>
                </we-select>
                <we-input string="Mark Text" data-set-mark="" data-dependencies="form_required_opt, form_optional_opt"/>
                <we-select data-name="type_opt" string="Type" data-no-preview="true">
                    <we-button data-custom-field="number">VAT</we-button>
                    <we-button data-custom-field="tel">Phone Number</we-button>
                    <we-button data-custom-field="char">Company Name</we-button>
                </we-select>
            </div>

            <!-- Add Field -->
            <div data-js="AddSignupField" data-selector=".signup_form_input">
                <we-button class="o_we_bg_brand_primary"
                    title="Add a new field after this one"
                    data-add-field=""
                    data-no-preview="true">
                    + Field
                </we-button>
            </div>

            <!-- <div data-js='WebsiteSignupFieldEditor' data-selector=".signup_form_field" 
                data-drop-near=".signup_form_field" data-drop-lock-within="form" >
                <we-select data-name="type_opt" string="Type" data-no-preview="true">
                    <we-button data-custom-field="number">VAT</we-button>
                    <we-button data-custom-field="tel">Phone Number</we-button>
                    <we-button data-custom-field="char">Company Name</we-button>
                </we-select>
                <we-input string="Placeholder" class="o_we_large"
                    data-select-attribute="" data-attribute-name="placeholder"
                    data-apply-to="input[type='text'], input[type='number'], input[type='tel']"/>
            </div> -->
        </xpath>
    </template>

</odoo>

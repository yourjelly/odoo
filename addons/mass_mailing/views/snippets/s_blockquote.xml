<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_blockquote" name="Blockquote">
    <div class="s_blockquote o_mail_snippet_general s_blockquote_classic w-100 mx-auto o_animable blockquote">
        <div class="container">
            <div class="row">
                <div class="col-lg-1 o_mail_no_padding_x" valign="top" align="right">
                    <i class="s_blockquote_icon fa fa-1x fa-quote-left bg-o-color-2 rounded"/>
                </div>
                <div class="col-lg-10 pt16 pb16 o_cc o_cc2">
                    <div class="container s_blockquote_content">
                        <div class="row">
                            <div class="col-lg-12">
                                <p>Write a quote here from one of your customers. Quotes are a great way to build confidence in your products or services.</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <img src="/web/image/mass_mailing.s_blockquote_default_image" class="s_blockquote_avatar img rounded-circle mr-2" style="width: 40px" alt=""/>
                                <span class="s_blockquote_author"><b>John DOE</b> &#8226; CEO of MyCompany</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</template>

</odoo>
